<UserControl
    x:Class="BackMeUp.Controls.SettingsHelpControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="using:BackMeUp.Properties"
    xmlns:helpers="using:BackMeUp.Helpers"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical" Spacing="10" Margin="0, 20, 0, 0">
        <TextBlock Text="{helpers:StringResource Key=AppDisplayName}" FontSize="20"/>
        <StackPanel Orientation="Horizontal" Spacing="2">
            <TextBlock Text="{helpers:StringResource Key=SettingsHelpControlVersion}"/>
            <TextBlock Text="{x:Bind _appVersion}"/>
        </StackPanel>
        <NavigationViewItemSeparator/>
        <TextBlock Text="{helpers:StringResource Key=SettingsHelpControlContactMe}" FontSize="20"/>
        <TextBlock Text="{helpers:StringResource Key=SettingsHelpControlContactMeText}"/>
        <HyperlinkButton Content="{helpers:StringResource Key=SettingsHelpControlContactMe}"
                         NavigateUri="{x:Bind properties:Resources.ContactUrl}" />
        <NavigationViewItemSeparator/>
    </StackPanel>
</UserControl>
