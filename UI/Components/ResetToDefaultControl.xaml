<UserControl
    x:Class="BackMeUp.UI.Components.ResetToDefaultControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:extMethods="using:BackMeUp.Utils.ExtensionMethods"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Button Content="{extMethods:StringResource Key=SettingsPageReset}">
        <Button.Flyout>
            <Flyout x:Name="ResetToDefaultFlyout">
                <StackPanel>
                    <TextBlock Text="{extMethods:StringResource Key=SettingsPageResetFlyoutLine1}"/>
                    <TextBlock Text="{extMethods:StringResource Key=SettingsPageResetFlyoutLine2}"/>
                    <Button Margin="0, 4, 0, 0" Content="{extMethods:StringResource Key=SettingsPageResetConfirm}">
                        <Button.Flyout>
                            <Flyout x:Name="ResetToDefaultFlyout2" Closed="ResetToDefaultFlyout2_OnClosed">
                                <StackPanel Spacing="4" Width="200">
                                    <TextBlock Text="{extMethods:StringResource Key=SettingsPageResetFlyout2}" TextWrapping="Wrap"/>
                                    <Button Click="ResetToDefault_Click" Content="{extMethods:StringResource Key=SettingsPageResetConfirm2}" />
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </Flyout>
        </Button.Flyout>
    </Button>
</UserControl>
